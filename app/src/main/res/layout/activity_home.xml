    <Button
        android:id="@+id/btnScanBarcode"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:onClick="scanSpa"
        android:background="@mipmap/qr_foreground" />
    <TextView
        android:id="@+id/tvscanqrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch to scan QR CODE"
        android:layout_above="@id/btnScanBarcode"
        android:layout_centerInParent="true"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPA Control Number"
        android:layout_below="@id/btnScanBarcode"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    <TextView
        android:text="@string/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav_view"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:textSize="20sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>